<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66ffffff"
    tools:context=".signup.view.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_nickname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:hint="닉네임"
                android:textColorHint="#4affffff"
                app:boxCollapsedPaddingTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingEnd="25dp"
                    android:textColor="#baffffff"
                    android:textColorHighlight="@color/design_default_color_primary"
                    android:textCursorDrawable="@drawable/input_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/signup_nickname_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignEnd="@id/signup_nickname_input"
                android:layout_marginTop="35dp"
                android:background="@drawable/check_circle"
                android:backgroundTint="#aaCDCDCD" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:hint="아이디"
                android:textColorHint="#4affffff"
                app:boxCollapsedPaddingTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingEnd="25dp"
                    android:textColor="#baffffff"
                    android:textColorHighlight="@color/design_default_color_primary"
                    android:textCursorDrawable="@drawable/input_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/signup_id_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignEnd="@id/signup_id_input"
                android:layout_marginTop="35dp"
                android:background="@drawable/check_circle"
                android:backgroundTint="#aaCDCDCD" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:hint="비밀번호"
                android:textColorHint="#4affffff"
                app:boxCollapsedPaddingTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="bottom"
                    android:inputType="textPassword"
                    android:paddingEnd="25dp"
                    android:textColor="#baffffff"
                    android:textColorHighlight="@color/design_default_color_primary"
                    android:textCursorDrawable="@drawable/input_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/signup_password_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignEnd="@id/signup_password_input"
                android:layout_marginTop="35dp"
                android:background="@drawable/check_circle"
                android:backgroundTint="#aaCDCDCD" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup_password_check_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:hint="비밀번호 확인"
                android:textColorHint="#4affffff"
                app:boxCollapsedPaddingTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="bottom"
                    android:inputType="textPassword"
                    android:paddingEnd="25dp"
                    android:textColor="#baffffff"
                    android:textColorHighlight="@color/design_default_color_primary"
                    android:textCursorDrawable="@drawable/input_cursor"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/signup_password_check_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignEnd="@id/signup_password_check_input"
                android:layout_marginTop="35dp"
                android:background="@drawable/check_circle"
                android:backgroundTint="#aaCDCDCD" />

        </RelativeLayout>

        <Button
            android:id="@+id/signup_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#C73279"
            android:text="회원가입"
            android:textColor="#daffffff" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>