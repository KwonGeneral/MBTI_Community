<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caffffff"
    tools:context=".mypage.view.MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/page_border"
        android:elevation="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="40dp"
            android:paddingEnd="20dp"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardUseCompatPadding="true">

                    <View
                        android:id="@+id/user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="24dp">

                    <TextView
                        android:id="@+id/mypage_user_nickname"
                        style="@style/noto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ba000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mypage_user_message"
                        style="@style/noto_lite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="안녕하세요."
                        android:textColor="#9a000000"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#44CDCDCD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mypage_user_mbti"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ba000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/noto_lite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="MBTI"
                        android:textColor="#9a000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view11"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#44CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mypage_user_board_count"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ba000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/noto_lite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Posts Count"
                        android:textColor="#9a000000"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#44CDCDCD" />

            <TextView
                android:id="@+id/textView17"
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:text="HISTORY"
                android:textColor="#ba000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mypage_history_recycler"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/gray_border"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/textView18"
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:text="How do you feel today?"
                android:textColor="#ba000000"
                android:visibility="gone"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/select_feel_very_good"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_left_click_effect"
                        android:backgroundTint="#C73279"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="매우 좋음"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view20"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/select_feel_good"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="좋음"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view21"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/select_feel_so"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="보통"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view17"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/select_feel_bad"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="나쁨"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view22"
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/select_feel_very_bad"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_right_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="매우 나쁨"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>