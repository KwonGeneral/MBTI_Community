<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66ffffff"
    tools:context=".login.view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/login_background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textView9"
                style="@style/noto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="포포"
                android:textColor="#4179d1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                style="@style/noto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="#baffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                style="@style/noto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="찹"
                android:textColor="#C73279"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                style="@style/noto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingTop="3dp"
                android:textColor="#baffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_status_message"
            style="@style/noto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:hint="아이디"
            android:textColorHint="#4affffff"
            app:boxCollapsedPaddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:gravity="bottom"
                android:inputType="text"
                android:textColor="#baffffff"
                android:textColorHighlight="@color/design_default_color_primary"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:hint="비밀번호"
            android:textColorHint="#4affffff"
            app:boxCollapsedPaddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:gravity="bottom"
                android:inputType="textPassword"
                android:textColor="#baffffff"
                android:textColorHighlight="@color/design_default_color_primary"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/find_password_text"
            style="@style/noto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Forgot your password"
            android:textColor="#cc4179d1"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="gone" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#4179d1"
            android:text="로그인"
            android:textColor="#daffffff" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            android:background="#4affffff" />

        <Button
            android:id="@+id/login_signup_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#C73279"
            android:text="회원가입"
            android:textColor="#daffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textView"
                style="@style/noto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="FaceBook\nLogin"
                android:textColor="#baffffff"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/login_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:background="@drawable/facebook"
                        android:backgroundTint="#4179d1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/login_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/twitter"
                        android:backgroundTint="#4179d1" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                style="@style/noto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Twiiter\nLogin"
                android:textColor="#baffffff"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>