<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login.view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="#3C1969"
        android:elevation="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/noto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Login With\nFaceBook"
                android:textColor="#baffffff"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/login_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/facebook"
                        android:backgroundTint="#7BB8EE" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/login_circle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/twitter"
                        android:backgroundTint="#7BB8EE" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                style="@style/noto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Login With\nTwiiter"
                android:textColor="#baffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:hint="ID"
            android:textColorHint="#4affffff"
            app:boxCollapsedPaddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3C1969"
                android:gravity="bottom"
                android:inputType="text"
                android:textColor="#baffffff"
                android:textColorHighlight="@color/design_default_color_primary"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:hint="Password"
            android:textColorHint="#4affffff"
            app:boxCollapsedPaddingTop="4dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/noto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3C1969"
                android:gravity="bottom"
                android:inputType="textPassword"
                android:textColor="#baffffff"
                android:textColorHighlight="@color/design_default_color_primary"
                android:textCursorDrawable="@drawable/input_cursor"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/find_password_text"
            style="@style/noto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="I forgot my password?"
            android:textColor="#B26EFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#6B58FF"
            android:text="Login"
            android:textColor="#daffffff" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp"
            android:background="#4affffff" />

        <Button
            android:id="@+id/login_signup_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#B26EFF"
            android:text="Signup"
            android:textColor="#aa000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>