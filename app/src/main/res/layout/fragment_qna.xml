<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caffffff"
    tools:context=".qna.view.QnaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/white_top_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/qna_top_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qna_select_free"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_left_click_effect"
                        android:backgroundTint="#C73279"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="자유"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view15"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#77ffffff" />

                    <TextView
                        android:id="@+id/qna_select_question"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="질문"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view29"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#77ffffff" />

                    <TextView
                        android:id="@+id/qna_select_hobby"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="취미"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view30"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#77ffffff" />

                    <TextView
                        android:id="@+id/qna_select_job"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="직업"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view31"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#77ffffff" />

                    <TextView
                        android:id="@+id/qna_select_support"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_right_click_effect"
                        android:backgroundTint="#000000"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="응원"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#caffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/qna_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>