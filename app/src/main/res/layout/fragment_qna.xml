<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caffffff"
    tools:context=".qna.view.QnaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_top_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/qna_top_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qna_select_free"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_left_click_effect"
                    android:backgroundTint="#C73279"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="자유"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view15"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#77ffffff" />

                <TextView
                    android:id="@+id/qna_select_question"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_click_effect"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="질문"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view29"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#77ffffff" />

                <TextView
                    android:id="@+id/qna_select_hobby"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_click_effect"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="취미"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view30"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#77ffffff" />

                <TextView
                    android:id="@+id/qna_select_job"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_click_effect"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="직업"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view31"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#77ffffff" />

                <TextView
                    android:id="@+id/qna_select_support"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/top_right_click_effect"
                    android:backgroundTint="#000000"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="응원"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#caffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/post_border"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:clipToPadding="false">

                        <View
                            android:id="@+id/board_user_profile3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <TextView
                            android:id="@+id/board_user_nickname3"
                            style="@style/noto_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KwonGeneral"
                            android:textColor="#ba000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/board_user_message3"
                            style="@style/noto_lite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 hours ago"
                            android:textColor="#9a000000"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/board_user_more3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/more_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_user_title3"
                        style="@style/noto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이제 곧 점심시간"
                        android:textColor="#ba000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/board_user_content3"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="배가 별로 고프지가 않다.\n돈가스가 너무 질려..;;"
                        android:textColor="#ba000000"
                        android:textSize="12sp"
                        card_view:lineHeight="19dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/qna_comment_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qna_create_comment3"
                            style="@style/noto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="댓글보기"
                            android:textColor="#4179d1"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/view32"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/arrow_down_icon"
                            android:backgroundTint="#aa4179d1" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/post_border"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:clipToPadding="false"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardUseCompatPadding="true">

                        <View
                            android:id="@+id/board_user_profile4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <TextView
                            android:id="@+id/board_user_nickname4"
                            style="@style/noto_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KwonGeneral"
                            android:textColor="#ba000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/board_user_message4"
                            style="@style/noto_lite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4 hours ago"
                            android:textColor="#9a000000"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/board_user_more4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/more_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_user_title4"
                        style="@style/noto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오늘도 출근"
                        android:textColor="#ba000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/board_user_content4"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="오늘도 여전히 지하철에는 사람이 많네"
                        android:textColor="#ba000000"
                        android:textSize="12sp"
                        card_view:lineHeight="19dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/qna_comment_layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qna_create_comment4"
                            style="@style/noto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="댓글보기"
                            android:textColor="#4179d1"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/view33"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/arrow_down_icon"
                            android:backgroundTint="#aa4179d1" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/post_border"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:clipToPadding="false"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardUseCompatPadding="true">

                        <View
                            android:id="@+id/board_user_profile5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <TextView
                            android:id="@+id/board_user_nickname5"
                            style="@style/noto_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KwonGeneral"
                            android:textColor="#ba000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/board_user_message5"
                            style="@style/noto_lite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10 hours ago"
                            android:textColor="#9a000000"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/board_user_more5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/more_menu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_user_title5"
                        style="@style/noto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="자유게시판 첫 글 등록"
                        android:textColor="#ba000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/board_user_content5"
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="와~~ 자유게시판이다~"
                        android:textColor="#ba000000"
                        android:textSize="12sp"
                        card_view:lineHeight="19dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/qna_comment_layout5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qna_create_comment5"
                            style="@style/noto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="댓글보기"
                            android:textColor="#4179d1"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/view34"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/arrow_down_icon"
                            android:backgroundTint="#aa4179d1" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>