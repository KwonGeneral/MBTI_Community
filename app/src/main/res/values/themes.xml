<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MBTI_Community" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noto_regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="noto_bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="noto_medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="noto_lite" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>